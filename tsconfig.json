{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es7"],
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "lib"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
